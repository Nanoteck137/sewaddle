Serie {
    id string;
    name string;
    cover string;
    chapterCount int;
}

Chapter {
    serieId string;
    number int;
    title string;
    coverArt string;

    user *ChapterUserData;
}

ChapterUserData {
    isMarked bool;
}

GetSeries {
    series []Serie;
}

GetSerieById :: Serie {}

GetSerieChaptersById {
    chapters []Chapter;
}

GetChapters {
    chapters []Chapter;
}

GetChapterById :: Chapter {
    nextChapter *int; 
    prevChapter *int;
    pages []string;
}
