Serie {
    id string;
    name string;
    cover string;
    chapterCount int;
}

Chapter {
    id string;
    index int;
    title string;
    serieId string;
}

ChapterUserData {
    isMarked bool;
}

GetSeries {
    series []Serie;
}

GetSerieById :: Serie {}

GetSerieChaptersById {
    chapters []Chapter;
}

GetChapters {
    chapters []Chapter;
}

GetChapterById :: Chapter {
    nextChapterId string; 
    prevChapterId string;
    pages []string;

    user *ChapterUserData;
}
